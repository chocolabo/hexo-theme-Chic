<div class="container">
    <%# toc %>
    <% if (page.toc !== false && theme.post_toc_enable && toc(page.content).length !== 0) { %>
        <%- partial('_partial/toc') %>
    <% } %>
    <article class="post-wrap page">
        <% if(theme.page_title_enable){ %>
        <h2 class="post-title"><%- page.title %></h2>
        <% } %>
        <section class="post-content">
            <%- page.content %>
        </section>
    </article>
</div>