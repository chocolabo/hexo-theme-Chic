body {
    font-family: 'Josefin Sans', 'ヒラギノ丸ゴ Pron', 'Hiragino Maru Gothic Pron', 'Yu Gothic UI', 'メイリオ', Meiryo, 'ヒラギノ角ゴシック', 'Hiragino Sans', sans-serif;
    background: #efefef;
}

.post-content {
  font-size: 1.1em;
}
.post-content h2,
.post-content h3,
.post-content h4,
.post-content h5,
.post-content h6 {
  padding-top: 0.8em;
  padding-bottom: 0;
  margin-bottom:0;
}
.post-content p {
  padding-top:0;
  margin-top:0.3em;
}
.post-content blockquote {
    font-size:0.9em;
}

.post-content img{
  -webkit-touch-callout:none;
  -webkit-user-select:none;
  -moz-touch-callout:none;
  -moz-user-select:none;
  user-select:none;
  pointer-events: none;
	}
  
.post-nav {
    margin-top:20px;
}

.navbar-mobile .container {
    background: #efefef;
    line-height: 3em;
}
.navbar-mobile .container .menu {
    background: #efefef;
}
.navbar-mobile .container .navbar-header .menu-toggle {
    line-height: 3em;
}
.navbar-mobile .container {
    line-height: 3em;
}

.note {
    padding: 0.75rem;
    padding-top: 0.2rem;
    border-left: 0.35rem solid;
    border-radius: 0.25rem;
    margin: 1.5rem 0;
    transition: color 0.2s ease-in-out;
    font-size: 0.85rem;
  }
  .note a {
    transition: color 0.2s ease-in-out;
  }
  .note *:last-child {
    margin-bottom: 0;
  }
  .note-default,
  .note-secondary {
    background-color: rgba(187,187,187,0.25);
    border-color: #777;
  }
  .note-primary {
    background-color: rgba(183,160,224,0.25);
    border-color: #6f42c1;
  }
  .note-success {
    background-color: rgba(174,220,174,0.25);
    border-color: #5cb85c;
  }
  .note-danger {
    background-color: rgba(236,169,167,0.25);
    border-color: #d9534f;
  }
  .note-warning {
    background-color: rgba(248,214,166,0.25);
    border-color: #f0ad4e;
  }
  .note-info {
    background-color: rgba(160,197,228,0.25);
    border-color: #428bca;
  }
  .note-light {
    background-color: rgba(254,254,254,0.25);
    border-color: #0f0f0f;
  }
  .link-area {
    cursor:pointer;
    display:block;
    margin:2.5em auto 2em;
    max-width:880px;
    transition:box-shadow .25s;
    width:100%;
    margin-top: 0.3em;
  }
  .link-area a {
    text-decoration: none;
  }
  
  .link-area:hover {
    box-shadow:0 4px 16px rgba(0,0,0,.1),0 12px 28px -12px rgba(0,0,0,.05);
  }

  .link-area .og-image{
    width: 18%;
    display: table-cell;
    vertical-align: middle;
    padding: 10px 0 10px 10px;
  }

  .link-area .descriptions {
    display: table-cell;
    vertical-align: middle;
    color: #4c4c4c;
  }
  
  .link-area .og-title {
    font-size: 1em;
    margin: 5px 10px 5px 10px;
    font-weight: bold;
    line-height: 1.4;
  }

  .link-area .descriptions .og-description {
    font-size: .74em;
    color: #4c4c4c;
    margin: 0 10px 5px 10px;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .link-area .clear {
    clear: both;
  }

  .group-image-container {
    margin: 1.5rem auto;
  }
  .group-image-container img {
    margin: 0 auto;
    border-radius: 3px;
    background-color: transparent;
    box-shadow: 0 3px 9px 0 rgba(0,0,0,0.15), 0 3px 9px 0 rgba(0,0,0,0.15);
  }
  .group-image-row {
    margin-bottom: 0.5rem;
    display: flex;
    justify-content: center;
  }
  .group-image-wrap {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  .group-image-wrap:not(:last-child) {
    margin-right: 0.25rem;
  }

.links {
  margin-top: 10px;
}
.links i {
    font-size:1.3em;
}

.recent-posts {
    margin-top: 30px;

}

.recent-post {

    text-align: left;
}
.latest-posts {
    list-style: none; /* リストマーカーを削除 */
    padding: 0;
    margin: 0;
}

.latest-posts li {
    display: flex; /* タイトルと日付を横に並べる */
    justify-content: space-between; /* タイトルと日付を左右に配置 */
    align-items: center; /* タイトルと日付の垂直位置を揃える */
    text-align: left;
}

.latest-posts li a {
    flex: 1; /* タイトル部分を広げる */
    text-decoration: none; /* 下線を削除 */
}

.latest-posts li a:hover {
    text-decoration: underline; /* マウスオーバー時に下線を表示 */
}

.latest-posts li span {
    flex-shrink: 0; /* 日付の部分が縮まないようにする */
    font-size: 0.9em; /* 日付のフォントサイズ */
    margin-left: 10px; /* タイトルと日付の間隔 */
}

.scroll-buttons {
    position: fixed;
    bottom: 1.5em;
    right: 1.5em;
    display: flex;
    flex-direction: column; /* 縦に並べる */
    gap: 0.5em; /* ボタン間の隙間 */
    align-items: center; /* ボタンを中央揃え */
}

.page-link, .pagetop {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 50%;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    display: none; /* 最初は非表示 */
    text-align: center;
    line-height: 2rem;
}

.page-link a, .pagetop a {
    color: #fff;
    font-size: 1.1rem;
    text-decoration: none;
}

.page-link:hover, .pagetop:hover {
    background-color: #2d96bd;
}


@media screen and (max-width: 550px) {
  .post-content {
    font-size: 0.9em;
  }
  .post-header .post-title {
    font-size: 1.2em;
    }

.archive-item-link {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

  .profile-container .description{
    font-size: 0.85em;
    }
    
    .sub-title {
      display: none;
    }
    .link-area:before {
      font-size: .66em;
    }
    .link-area .descriptions .og-title {
      font-size: .80em;
    }
    .link-area .descriptions .og-description {
      display: none;
    }
    
    .latest-posts li span {
        display: none;
    }
    .recent-posts {
        font-size: 0.9em;
    }
}

  .footer {
    height: 4rem;
    line-height: 1.5rem;
    padding-top: 1em;
  }
